{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "jsx": "preserve",
        "lib": ["dom", "esnext"],
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
            "global/*": ["./src/components/global/*"],
            "utility/*": ["./src/components/utility/*"],
            "reusable/*": ["./src/components/reusable/*"],
            "views/*": ["./src/components/views/*"]
        }
    },
    "include": ["src"]
}
